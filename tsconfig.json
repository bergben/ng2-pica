{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es2015",
        "target": "es5",
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "paths": {
            "@angular/core": ["node_modules/@angular/core"],
            "rxjs": ["node_modules/rxjs"],
            "pica": ["node_modules/pica"],
            "exif-js": ["node_modules/exif-js"],
        },
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
